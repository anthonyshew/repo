{
	"name": "shewrepo",
	"version": "0.1.0",
	"scripts": {
		"build": "turbo run build",
		"checks": "turbo run lint check-types spellcheck --continue",
		"checks:fix": "turbo run format:fix lint:fix --continue --force",
		"clean": "find . -name node_modules -o -name .next -o -name dist -o -name .contentlayer -type d -prune | xargs rm -rf",
		"dev": "turbo run dev //#dev:ts",
		"dev:ts": "tsc -b -w --preserveWatchOutput",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"check-types": "turbo run check-types --continue"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"turbo": "^2.5.4"
	},
	"packageManager": "pnpm@10.12.4",
	"engines": {
		"node": ">=22"
	}
}
