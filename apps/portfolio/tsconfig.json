{
	"extends": "@repo/tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"content-collections": ["./.content-collections/generated"],
			"#/*": ["./*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".source/index.ts"
	],
	"exclude": ["node_modules", ".next", ".content-collections", "dist"],
	"references": [
		{
			"path": "../../packages/ui"
		}
	]
}
