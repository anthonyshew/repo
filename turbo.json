{
	"ui": "tui",
	"tasks": {
		"dev": {
			"persistent": true,
			"cache": false,
			"with": ["//#dev:ts"]
		},
		"build": {
			"dependsOn": ["^build"],
			"env": ["VAPID_PRIVATE_KEY", "AI_GATEWAY_API_KEY"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"//#knip": {},
		"//#lint": {},
		"//#lint:fix": {
			"cache": false
		},
		"check-types": {
			"dependsOn": ["^check-types"],
			"outputs": ["dist"]
		},
		"//#dev:ts": {
			"cache": false,
			"persistent": true
		}
	}
}
