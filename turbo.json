{
	"tasks": {
		"dev": {
			"persistent": true,
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"topo": {
			"dependsOn": ["^topo"]
		},
		"//#format": {},
		"//#format:fix": {
			"cache": false
		},
		"//#lint": {},
		"lint": {
			"dependsOn": ["^topo", "^generate", "generate"]
		},
		"//#lint:fix": {
			"dependsOn": ["^topo"],
			"cache": false
		},
		"lint:fix": {
			"dependsOn": ["^topo", "^generate", "generate"],
			"cache": false
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"//#dev:ts": {
			"cache": false
		},
		"spellcheck": {
			"inputs": ["**/*.mdx"],
			"cache": false
		}
	}
}
